<datasources-configuration xmlns:svns="http://org.wso2.securevault/configuration">
    <!-- Greg 5.2 Performance testing  -->
    <providers>
        <provider>org.wso2.carbon.ndatasource.rdbms.RDBMSDataSourceReader</provider>
    </providers>
    <datasources>
        <%- @metrics_datasources.each do |db_name,db_configuration| %>
        <datasource>
            <name><%= db_configuration['name'] %></name>
            <description><%= db_configuration['description'] %></description>
            <jndiConfig>
                <name>jdbc/<%= db_configuration['jndi_config'] %></name>
            </jndiConfig>
           <definition type="RDBMS">
                <configuration>
                    <url><%= db_configuration['url'] %></url>
                    <username><%= db_configuration['username'] %></username>
                    <password><%= db_configuration['password'] %></password>
                    <driverClassName><%= db_configuration['driver_class_name'] %></driverClassName>
                    <maxActive><%= db_configuration['max_active'] %></maxActive>
                    <maxWait><%= db_configuration['max_wait'] %></maxWait>
                    <testOnBorrow><%= db_configuration['test_on_borrow'] %></testOnBorrow>
                    <validationQuery><%= db_configuration['validation_query'] %></validationQuery>
                    <validationInterval><%= db_configuration['validation_interval'] %></validationInterval>
                </configuration>
            </definition>
        </datasource>
        <%- end %>
    </datasources>

</datasources-configuration>
