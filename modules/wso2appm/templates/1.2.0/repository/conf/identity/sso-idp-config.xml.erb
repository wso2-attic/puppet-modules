<SSOIdentityProviderConfig>
    <TenantRegistrationPage>https://stratos-local.wso2.com/carbon/tenant-register/select_domain.jsp</TenantRegistrationPage>
    <ServiceProviders>

    <%- @service_providers.each do |provider_name, provider| -%>
       <ServiceProvider>
            <Issuer><%= provider['issuer'] %></Issuer>
            <AssertionConsumerService><%= provider['acs_url'] %></AssertionConsumerService>
            <SignResponse><%= provider['sign_response'] %></SignResponse>
            <CustomLoginPage><%= provider['login_page'] %></CustomLoginPage>
        </ServiceProvider>

   <%- end -%>
    </ServiceProviders>
</SSOIdentityProviderConfig>
